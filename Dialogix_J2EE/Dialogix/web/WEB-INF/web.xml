<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>First Responders Study</display-name>
    <description>First Responders Study</description>
    
    <servlet>
        <servlet-name>
            Dialogix
        </servlet-name>
        <servlet-class>
            org.dianexus.triceps.TricepsServlet
        </servlet-class>
        
        <init-param>
            <param-name>dialogix.dir</param-name>
            <param-value>/bin/tomcat6/webapps/FirstResp/</param-value>
        </init-param>   
        <init-param>
            <param-name>scheduleSrcDir</param-name>
            <param-value>WEB-INF/schedules/</param-value>
        </init-param>
        <init-param>
            <param-name>workingFilesDir</param-name>
            <param-value>WEB-INF/working/</param-value>
        </init-param>
        <init-param>
            <param-name>completedFilesDir</param-name>
            <param-value>WEB-INF/completed/</param-value>
        </init-param>
        <init-param>
            <param-name>imageFilesDir</param-name>
            <param-value>/FirstResp/images/</param-value>
        </init-param>
        <init-param>
            <param-name>helpIcon</param-name>
            <param-value>help_true.gif</param-value>
        </init-param>
        <init-param>
            <param-name>logoIcon</param-name>
            <param-value>dialogo.jpg</param-value>
        </init-param>
        <init-param>
            <param-name>floppyDir</param-name>
            <param-value>WEB-INF/archive/</param-value>
        </init-param>
        
        <init-param>
            <param-name>LICENSE.STUDY_NAME</param-name>
            <param-value>First Responders Study</param-value>
        </init-param>
        <init-param>
            <param-name>LICENSE.STUDY_ICON</param-name>
            <param-value>/FirstResp/images/dialogo.jpg</param-value>
        </init-param>	
        <init-param>
            <param-name>SUPPORT.PHONE</param-name>
            <param-value/>
        </init-param>	
        <init-param>
            <param-name>SUPPORT.EMAIL</param-name>
            <param-value/>
        </init-param>	
        <init-param>
            <param-name>SUPPORT.PERSON</param-name>
            <param-value/>
        </init-param>        
    </servlet>
    
	  <servlet>
	    <servlet-name>velocity</servlet-name>
	    <servlet-class>org.apache.velocity.tools.view.servlet.VelocityLayoutServlet</servlet-class>
	    <init-param>
	      <param-name>org.apache.velocity.toolbox</param-name>
	      <param-value>/WEB-INF/velocity-toolbox.xml</param-value>
	    </init-param>
	    <init-param>
	      <param-name>org.apache.velocity.properties</param-name>
	      <param-value>/WEB-INF/velocity.properties</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
	  </servlet>    
    
   <servlet>
    <servlet-name>log4j-init</servlet-name>
    <servlet-class>org.dianexus.triceps.Log4jInit</servlet-class>

    <init-param>
      <param-name>log4j-init-file</param-name>
      <param-value>WEB-INF/classes/log4j.properties</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>       
    
  <!-- Define the Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>Dialogix</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>
  
	<servlet-mapping>
	    <servlet-name>velocity</servlet-name>
	  <url-pattern>*.vm</url-pattern>
	</servlet-mapping>  
  
  <welcome-file-list>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.vm</welcome-file>
  </welcome-file-list>    
  
